    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cmake --build . --target install",
            "group": {
                "kind": "build"
            },
            "presentation": {
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "label": "test",
            "type": "shell",
            "command": "cd build && ctest -C Release -V",
            "dependsOrder": "sequence",
            "dependsOn": [
                "build"
            ],
            "presentation": {
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "label": "valgrind",
            "type": "shell",
            "command": "valgrind --tool=memcheck --leak-check=yes ./build/test/string_test_Tests",
            "dependsOrder": "sequence",
            "dependsOn": [
                "build"
            ],
            "presentation": {
                "panel": "dedicated"
            },
            "problemMatcher": []
        }
    ]
}